<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<scene>
	<camera fov="45">
		<pos x="0" y="150" z="-550"/>
		<dir x="0" y="0" z="0"/>
	</camera>

	<lights>
		<light>
			<pos x="230" y="50" z="-200"/>
		</light>
		<light intensity="0.7">
			<pos x="-300" y="100" z="-200"/>
		</light>
	</lights>

	<objects>
		<plane sin="1">
			<pos x="0" y="-20" z="0"/>
			<normal x="0" y="1" z="0"/>
			<!--<color r="200" g="200" b="200"/>-->
		</plane>

		<plane>
			<pos x="0" y="0" z="100"/>
			<normal x="0" y="0" z="1"/>
			<color r="100" g="100" b="255"/>
			<negatif type="2">
				<dir x="1" y="0" z="1"/>
			</negatif>
		</plane>

		<sphere radius="40" reflection="0.8">
			<pos x="220" y="20" z="-40"/>
			<color r="0" g="255" b="255"/>
		</sphere>

		<sphere radius="40">
			<pos x="-220" y="20" z="-40"/>
			<color r="255" g="0" b="0"/>
			<negatif type="2">
				<dir x="1" y="0" z="1"/>
			</negatif>
		</sphere>

		<cylindre radius="30" sin="1">
			<pos x="0" y="150" z="0"/>
			<vector x="1" y="1" z="0"/>
			<color r="255" g="0" b="255"/>
			<negatif type="2">
				<dir x="1" y="0" z="1"/>
			</negatif>
		</cylindre>

		<cone angle="30" sin="1">
			<pos x="75" y="75" z="0"/>
			<vector x="1" y="-1" z="0"/>
			<color r="255" g="255" b="0"/>
			<negatif type="2">
				<dir x="1" y="0" z="1"/>
			</negatif>
		</cone>
	</objects>
</scene>